package core.utils{	public final class Time  {		static public var defaultDateFormat:String = "dd/mm/yyyy";		static public var defaultTimeFormat:String = "hh:mm:ss";						static public function get now():Number { return new Date().getTime(); }				static public function formatDate(time:Number, format:String = ""):String		{			if (format == "") format = defaultDateFormat;			var d:Date = new Date();						var output:String = format;			output = output.replace(/dd/gi, correct(d.getUTCDate(), 2));			output = output.replace(/mm/gi, correct(d.getUTCMonth() + 1, 2));			output = output.replace(/yyyy/gi, correct(d.getUTCFullYear(), 4));			output = output.replace(/yy/gi, correct(d.getUTCFullYear(), 2));						return output;		}				static public function formatTime(time:Number, format:String = ""):String		{			if (format == "") format = defaultTimeFormat;			var d:Date = new Date();						var output:String = format;			output = output.replace(/hh/gi, correct(d.getHours(), 2));			output = output.replace(/mm/gi, correct(d.getMinutes(), 2));			output = output.replace(/ss/gi, correct(d.getSeconds(), 2));			output = output.replace(/ms/gi, correct(d.getMilliseconds() / 10, 2));						return output;		}								static public function correct(value:Number, digits:int):String		{			var output:String = String(value);			while(output.length < digits) output = "0" + output;			while(output.length > digits) output = output.substr(1);			return output;		}			}}